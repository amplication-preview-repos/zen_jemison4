datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Payment {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  amount      Float?
  paymentDate DateTime?
  debt        Debt?     @relation(fields: [debtId], references: [id])
  debtId      String?
}

model Debt {
  id         String          @id @default(cuid())
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
  amount     Float?
  dueDate    DateTime?
  status     EnumDebtStatus?
  payments   Payment[]
  user       User?           @relation(fields: [userId], references: [id])
  userId     String?
  creditor   Creditor?       @relation(fields: [creditorId], references: [id])
  creditorId String?
}

model Creditor {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  name         String?
  contactEmail String?
  phoneNumber  String?
  debts        Debt[]
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String?
  lastName  String?
  username  String   @unique
  email     String?  @unique
  password  String
  roles     Json
  debts     Debt[]
}

enum EnumDebtStatus {
  Option1
}
